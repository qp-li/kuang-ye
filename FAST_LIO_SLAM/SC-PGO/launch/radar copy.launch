<launch>

    <param name="scan_line" type="int" value="64" />

    <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
    <!-- <param name="mapping_skip_frame" type="int" value="1" /> -->

    <!-- remove too closed points -->
    <param name="minimum_range" type="double" value="0.1"/>

    <param name="mapping_line_resolution" type="double" value="0.0004"/> <!-- A-LOAM -->
    <param name="mapping_plane_resolution" type="double" value="0.0008"/> <!-- A-LOAM -->

    <param name="mapviz_filter_size" type="double" value="0.0005"/>
    <param name="sc_icp_filter_size" type="double" value="0.0005"/>
    <param name="loopFitnessScoreThreshold" type="double" value="2"/> 

    <!-- SC-A-LOAM -->
    <param name="keyframe_meter_gap" type="double" value="0.00005"/>
    <param name="keyframe_deg_gap" type="double" value="0.00005"/>

    <!-- Scan Context -->
    <param name="sc_dist_thres" type="double" value="0.5"/> <!-- SC-A-LOAM, if want no outliers, use 0.1-0.15 -->
    <!-- <param name="sc_max_radius" type="double" value="40.0"/> 20 or 40 for indoor -->
    <param name="sc_max_radius" type="double" value="500.0"/> <!-- for outdoor -->

    <!-- for MulRan -->
    <param name="lidar_type" type="string" value="ARS548"/>

    <!-- input from FASTLIO2 -->
    <remap from="/aft_mapped_to_init" to="/Odometry"/>
    <remap from="/velodyne_cloud_registered_local" to="/cloud_registered_body"/>
    <remap from="/cloud_for_scancontext" to="/cloud_registered_lidar"/>   <!-- because ScanContext requires lidar-ego-centric coordinate for the better performance -->

    <!-- utils -->
    <param name="save_directory" type="string" value="$(env HOME)/Desktop/catkin_fastlio_slam/data/"/>  <!-- CHANGE THIS and end with / -->

    <!-- nodes -->
    <node pkg="aloam_velodyne" type="alaserPGO" name="alaserPGO" output="screen" /> <!-- Scan Context-based PGO -->

    <!-- visulaization -->
    <arg name="rvizscpgo" default="true" />
    <group if="$(arg rvizscpgo)">
         <!-- <node launch-prefix="nice" pkg="rviz" type="rviz" name="rvizscpgo" args="-d $(find aloam_velodyne)/rviz_cfg/aloam_velodyne.rviz" /> -->
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rvizscpgo" args="-d $(find aloam_velodyne)/rviz_cfg/1.rviz" />
    </group>

</launch>
